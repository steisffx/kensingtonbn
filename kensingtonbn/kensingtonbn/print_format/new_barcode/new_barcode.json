 "css": "\nsvg{\n    height:20px;\n}\n\n.dashboard-section{\n    border: 1px solid;\n    border-color: black; \n    width: max-content;\n    padding: 30px 50px 30px 50px;   \n}\n\n.barcode-container {\n    margin-top: 12px\n}\n\n.barcode-label-container{\n    text-align: center;\n}\n.barcode{\nfont-family: 'Libre Barcode 39', cursive;\nfont-size: 35px;\n}\n\n.print-format {\n  font-size: 8pt;\n}",
